{
  "compilerOptions": {
    "outDir": "lib",
    "target": "es6",
    "lib": [
      "es6"
    ],
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "noImplicitAny": false,
    "sourceMap": true,
    "strict": true,
    "allowJs": true,
    "strictNullChecks": false,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src",
    "test"
  ]
}
